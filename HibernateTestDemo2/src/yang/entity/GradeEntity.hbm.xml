<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="yang.entity.GradeEntity" table="grade" schema="hibernate">
        <id name="gid" column="gid">
            <generator class="increment"/>
        </id>
        <property name="gname" column="gname" not-null="true"/>
        <property name="gdesc" column="gdesc"/>
        <!--配置单向的一对多关联关系-->
        <set name="student" table="student">
            <key column="fk_gid"/>
            <one-to-many class="yang.entity.StudentEntity"/>
        </set>
    </class>
</hibernate-mapping>